        app:layout_constraintStart_toEndOf="@+id/imgRec"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableTop="@drawable/ic_pause_rec"
        app:drawableTopCompat="@drawable/ic_pause_rec"
        app:textColorType="black" />

    <TextView
